<div class="container mt-3">
  <div class="row">
    <div class="col">
    	<% Tagger.instances.each do |instance| %>
	    	<div class="card mb-3">
			  <div class="card-header"><%= instance.name.titleize %></div>
			  <div class="card-body">
			  	<% instance.locales.each do |locale| %>
					<div class="card mb-3">
					  <div class="card-header">
					  	<div class="row">
					  		<div class="col-md-8">
					  			<%= "#{instance.name.titleize} > #{locale.code}"  %>
					  		</div>
					  		<div class="col-md-4">
					  			<%= link_to tag_tagger_instance_locale_path(instance_id: instance.name, id: locale.code), class: 'btn btn-sm btn-outline-success float-right' do %>
					  				<i class="zmdi zmdi-tag"></i> Generate Tag
					  			 <% end %>
					  		</div>
					  	</div>
					  </div>
					  <div class="card-body">
					  	<form>
						  	<div class="row">
						  		<div class="col-md-9">
						  			<% if locale.tags.length >= 2 %>
											<input
												class="delta-slider"
												type="text"
												data-slider-value="[1, <%= locale.tags.length %>]" 
												data-slider-ticks="<%= (1..locale.tags.length).to_a %> "
												data-slider-ticks-labels='<%= locale.tags.map(&:name) %>' 
												data-slider-lock-to-ticks="true"/>
										<% else %>
											No Tags are there for locale <%= locale.code %>.
										 <% end %>
						  		</div>
						  		<div class="col-md-3">
						  			<%= link_to delta_tagger_instance_locale_path(instance_id: instance.name, id: locale.code), class: 'btn btn-sm btn-outline-primary' do %>
					  					<i class="zmdi zmdi-download"></i> Delta
					  			 	<% end %>

						  			<%= link_to complete_tagger_instance_locale_path(instance_id: instance.name, id: locale.code), class: 'btn btn-sm btn-outline-primary' do %>
					  					<i class="zmdi zmdi-download"></i> Complete
					  			 	<% end %>
									<button type="button" class="btn btn-sm btn-outline-secondary">Upload</button>
						  		</div>
						  	</div>
					  	</form>
					  </div>
					</div>
			    <% end %>
			  </div>
			</div>
    	<% end %>
    </div>
  </div>
</div>


<script type="text/javascript">
	$(".delta-slider").slider();
</script>